<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_custom_height_horizontal_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.parse.ParseImageView
            android:id="@+id/parseImageViewIconCourse"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitleCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewOwnerCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/textViewQuantityCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="9dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorButtonCancel" />

                <ImageView
                    android:id="@+id/imageViewStarsCourse"
                    android:layout_width="58dp"
                    android:layout_gravity="bottom"
                    android:layout_height="30dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="3dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>